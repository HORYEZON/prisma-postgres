
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  course   String
  age      Int
  status   Status
  isEnroll Boolean
  createdAt DateTime @default(now())

  departmentId Int
  department Department @relation(fields: [departmentId], references: [id])

  professorId Int
  professor Professor @relation(fields: [professorId], references: [id])
}

model Department {
  id Int  @id @default(autoincrement())
  name String   @unique
  students Student[]
}

model Professor {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  degree Degree
  students Student[]
}

enum Status {
  ACTIVE
  GRADUATED
  DROPPED
}

enum Degree {
  Bachelor
  Masteral
  Doctoral
}
